<div class="container">

  <h1>Contact Us</h1>
  <%= form_for @message, html: { class: "form-horizontal", role: "form" } do |f| %>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <%= email_field("message", "email", :placeholder => "Enter Your Email", class:"form-control", id:"inputEmail3") %>
      </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Object</label>
        <div class="col-sm-10">
          <%= text_field("message", "topic", :placeholder => "Enter Your Object", class:"form-control", id:"inputEmail3") %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Message</label>
        <div class="col-sm-10">
          <%= text_area("message", "msg", :placeholder => "Enter Your Message", class:"form-control", id:"inputEmail3") %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag("Send Message", class:"btn btn-large btn-primary") %>
      </div>
    </div>
  <% end %>
</div>