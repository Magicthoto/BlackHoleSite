<div class="container">
<h1>Identification</h1>
<%= form_for(:session, url: sessions_path, html: { class: "form-horizontal", role: "form" }) do |f| %>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <%= f.email_field("email", :placeholder => "Enter Your Email", class:"form-control", id:"inputEmail3") %>
      </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          <%= f.password_field("encrypted_password", :placeholder => "Enter Your Password", class:"form-control", id:"inputEmail3") %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      </div>
    </div>
  <% end %>
  <p>Pas encore inscrit ? <%= link_to "S'inscrire !", users_new_path %></p>
</div>