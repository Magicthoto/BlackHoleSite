<div class="container">

  <h1>Create Your Account</h1>
  <%= form_for @user, html: { class: "form-horizontal", role: "form" } do |f| %>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <%= email_field("user", "name", :placeholder => "Enter Your Name", class:"form-control", id:"inputEmail3") %>
      </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">LastName</label>
        <div class="col-sm-10">
          <%= text_field("user", "lastname", :placeholder => "Enter Your Lastname", class:"form-control", id:"inputEmail3") %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Login</label>
        <div class="col-sm-10">
          <%= text_field("user", "login", :placeholder => "Enter Your Login", class:"form-control", id:"inputEmail3") %>
      </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          <%= password_field("user", "encrypted_password", :placeholder => "Enter Your Password", class:"form-control", id:"inputEmail3") %>
      </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Password Confirmation</label>
        <div class="col-sm-10">
          <%= password_field("user", "password_confirmation", :placeholder => "Confirm Your Password", class:"form-control", id:"inputEmail3") %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag("Create Your Account", class:"btn btn-default") %>
      </div>
    </div>
  <% end %>
</div>